<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/cardViewPLayerOne">
            <CustomAttribute
                app:attributeName="type"
                app:customIntegerValue="0" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwo">
            <CustomAttribute
                app:attributeName="type"
                app:customIntegerValue="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/hit"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint android:id="@id/cardViewPLayerOne">
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginEnd="@dimen/cardgame_spacing_xs"
                motion:layout_constraintBottom_toTopOf="@id/userViewPlayerOne"
                motion:layout_constraintDimensionRatio="H,2:1.15"
                motion:layout_constraintEnd_toStartOf="@id/guidelinePlayedCards"
                motion:layout_constraintTop_toBottomOf="@id/userViewPlayerTwo" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwo">
            <PropertySet android:visibility="visible" />
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginStart="@dimen/cardgame_spacing_xs"
                motion:layout_constraintBottom_toTopOf="@id/userViewPlayerOne"
                motion:layout_constraintDimensionRatio="H,2:1.15"
                motion:layout_constraintStart_toEndOf="@id/guidelinePlayedCards"
                motion:layout_constraintTop_toBottomOf="@id/userViewPlayerTwo" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/round"
        motion:deriveConstraintsFrom="@id/hit">

        <Constraint android:id="@id/textViewNotifications">
            <PropertySet
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerOne">
            <CustomAttribute
                app:attributeName="type"
                app:customIntegerValue="2" />
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                motion:layout_constraintBottom_toTopOf="@id/userViewPlayerOne"
                motion:layout_constraintDimensionRatio="H,2:1.15"
                motion:layout_constraintEnd_toEndOf="@id/guidelinePlayedCards"
                motion:layout_constraintStart_toStartOf="@id/guidelinePlayedCards"
                motion:layout_constraintTop_toBottomOf="@id/userViewPlayerTwo" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwo">
            <CustomAttribute
                app:attributeName="type"
                app:customIntegerValue="2" />
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                motion:layout_constraintBottom_toTopOf="@id/userViewPlayerOne"
                motion:layout_constraintDimensionRatio="H,2:1.15"
                motion:layout_constraintEnd_toEndOf="@id/guidelinePlayedCards"
                motion:layout_constraintStart_toStartOf="@id/guidelinePlayedCards"
                motion:layout_constraintTop_toBottomOf="@id/userViewPlayerTwo" />
        </Constraint>

    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/roundTwoWinner"
        motion:deriveConstraintsFrom="@id/round">

        <Constraint android:id="@id/textViewNotifications">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwoDiscard">
            <PropertySet
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerOne">
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginTop="@dimen/cardgame_spacing_m"
                android:layout_marginEnd="@dimen/cardgame_spacing_s"
                app:layout_constraintBottom_toBottomOf="@id/userViewPlayerTwo"
                app:layout_constraintDimensionRatio="H,2:1.15"
                app:layout_constraintEnd_toEndOf="@id/userViewPlayerTwo"
                app:layout_constraintTop_toTopOf="@id/userViewPlayerTwo" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwo">
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginTop="@dimen/cardgame_spacing_m"
                android:layout_marginEnd="@dimen/cardgame_spacing_s"
                app:layout_constraintBottom_toBottomOf="@id/userViewPlayerTwo"
                app:layout_constraintDimensionRatio="H,2:1.15"
                app:layout_constraintEnd_toEndOf="@id/userViewPlayerTwo"
                app:layout_constraintTop_toTopOf="@id/userViewPlayerTwo" />
        </Constraint>

    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/roundOneWinner"
        motion:deriveConstraintsFrom="@id/round">

        <Constraint android:id="@id/textViewNotifications">
            <PropertySet
                android:visibility="invisible" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerOneDiscard">
            <PropertySet
                android:visibility="visible" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerOne">
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginTop="@dimen/cardgame_spacing_m"
                android:layout_marginEnd="@dimen/cardgame_spacing_s"
                app:layout_constraintBottom_toBottomOf="@id/userViewPlayerOne"
                app:layout_constraintDimensionRatio="H,2:1.15"
                app:layout_constraintEnd_toEndOf="@id/userViewPlayerOne"
                app:layout_constraintTop_toTopOf="@id/userViewPlayerOne" />
        </Constraint>

        <Constraint android:id="@id/cardViewPLayerTwo">
            <Layout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/cardgame_card_height"
                android:layout_marginTop="@dimen/cardgame_spacing_m"
                android:layout_marginEnd="@dimen/cardgame_spacing_s"
                app:layout_constraintBottom_toBottomOf="@id/userViewPlayerOne"
                app:layout_constraintDimensionRatio="H,2:1.15"
                app:layout_constraintEnd_toEndOf="@id/userViewPlayerOne"
                app:layout_constraintTop_toTopOf="@id/userViewPlayerOne" />
        </Constraint>

    </ConstraintSet>
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/hit">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="0"
                android:alpha="1"/>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:alpha="1"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/hit"
        app:constraintSetEnd="@id/round" />
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/round"
        app:constraintSetEnd="@id/roundTwoWinner">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="100"
                android:rotation="-45"/>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:rotation="-45"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/round"
        app:constraintSetEnd="@id/roundOneWinner">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="100"
                android:rotation="45"/>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:rotation="45"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/roundOneWinner"
        app:constraintSetEnd="@id/start">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="100"
                android:rotation="0"/>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="0"
                android:alpha="0"/>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:rotation="0"/>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>
    <Transition
        motion:duration="800"
        app:constraintSetStart="@id/roundTwoWinner"
        app:constraintSetEnd="@id/start">

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="100"
                android:rotation="0"/>
            <KeyAttribute
                app:motionTarget="@id/cardViewPLayerOne"
                app:framePosition="0"
                android:alpha="0"/>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:rotation="0"/>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/cardViewPLayerTwo"
                android:alpha="0"/>
        </KeyFrameSet>
    </Transition>
</MotionScene>